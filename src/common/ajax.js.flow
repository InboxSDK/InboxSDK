/* @flow */

// Simple ajax helper.
// opts:
// * url
// * [method]
// * [cachebust] - boolean
// * [headers] - object
// * [xhrFields] - object
// * [data]
export type AjaxOpts = {
  url: string,
  method?: ?string,
  cachebust?: ?boolean,
  headers?: ?{ [index: string]: string },
  xhrFields?: ?Object,
  data?: ?{ [index: string]: string } | string,
  canRetry?: ?boolean,
  retryNum?: number
};

export type AjaxResponse = {
  text: string,
  xhr: XMLHttpRequest
};

declare export default function ajax(opts: AjaxOpts): Promise<AjaxResponse>;
